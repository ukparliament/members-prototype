#content.section--primary
  .container
    %h1= title("#{@person.display_name} - #{t('.title', current: t('current').capitalize, constituency: t('constituency'))}")

- unless @constituency.nil?
  %section
    .container
      %ul.list--box
        %li
          %h2= link_to(@constituency.name, party_path(@constituency.graph_id))
          %p= "#{l(@constituency.seat_incumbencies.first.start_date, format: :default)} #{t('to_present')}" unless @constituency.seat_incumbencies.first.start_date.nil?
