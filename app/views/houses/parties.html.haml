- page_title = title("#{@house.name} - #{t('parties_title')} #{t('past_present')}")

%h1= page_title
.block
  .link__tab
    - if HousesHelper.commons?(@house)
      .link__tab--item.active
        %p= t('commons')
    - else
      .link__tab--item
        = link_to(t('commons'),house_parties_path(HousesHelper.commons_id))
    - if HousesHelper.lords?(@house)
      .link__tab--item.active
        %p= t('lords')
    - else
      .link__tab--item
        = link_to(t('lords'),house_parties_path(HousesHelper.lords_id))
%ul.list
  = render :partial => 'houses/party', collection: @parties

