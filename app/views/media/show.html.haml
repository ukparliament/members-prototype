- media_link = "#{ENV['IMAGE_SERVICE_URL']}/#{@image.graph_id}.jpeg"
- license_link = "https://creativecommons.org/licenses/by/3.0/"

.section--primary#content
  .container
    .block--border__bottom
      %h1= title("#{t('.title').capitalize} #{@person.display_name}")
      - if @image.graph_id
        %figure
          %img{ src: "#{media_link}?width=1464", alt: "#{@person.display_name}" }
          %figcaption
            = "#{t('.title').capitalize}"
            = link_to(@person.display_name, person_path(@person.graph_id))

        %p= t('.license', link: link_to(t('.license_link'), "#{license_link}", target: '_blank', title: t('open_new_window'))).html_safe

        %p= t('.license_context', link: link_to(t('.license_context_link'), "#{license_link}", target: '_blank', title: t('open_new_window'))).html_safe

        = link_to(t('.download').capitalize + ' ' + t('.download_res_original'), "#{media_link}?download=true", class: 'btn--primary')

      - else
        .highlight--box.highlight--caution__soft
          %p= t('.no_portrait')


- if @image.graph_id
  .section
    .container
      %h2= t('.portraits_heading')
      %ol.list--pipe
        %li
          %figure
            %img{ src: "#{media_link}?crop=MCU_3:2&quality=100?download=true", alt: "#{@person.display_name}" }
          .list--details
            %h3= t('.download_heading_1')
            = link_to(t('.download').capitalize + ' ' + t('.download_res_wide_portrait'), "#{media_link}?crop=MCU_3:2&quality=100&download=true", class: 'btn--primary', download: '')
        %li
          %figure
            %img{ src: "#{media_link}?crop=MCU_3:4&width=130&quality=100", alt: "#{@person.display_name}" }
          .list--details
            %h3= t('.download_heading_2')
            = link_to(t('.download').capitalize + ' ' + t('.download_res_portrait'), "#{media_link}?crop=MCU_3:4&quality=100&download=true", class: 'btn--primary', download: '')
        %li
          %figure
            %img{ src: "#{media_link}?crop=CU_1:1&width=130&quality=100", alt: "#{@person.display_name}" }
          .list--details
            %h3= t('.download_heading_3')
            = link_to(t('.download').capitalize + ' ' + t('.download_res_thumbnail'), "#{media_link}?crop=CU_1:1&quality=100&download=true", class: 'btn--primary', download: '')
