- page_title = title("#{@person.display_name} - #{t('.title', current: t('current'), constituency: t('constituency'))}")

%h1= page_title

- unless @constituency.nil?
  .block
    .list__item
      %h2= link_to(@constituency.name, party_path(@constituency.graph_id))
      %p= "#{l(@constituency.seat_incumbencies.first.start_date, format: :default)} to Present" unless @constituency.seat_incumbencies.first.start_date.nil?
