%h1= @house.name
%h3= t('.title', current: t('current'), members: t('members'))
= render partial: 'shared/id_a_to_z', locals: { route_symbol: :house_members_current_a_z_letter_path, id: @house.graph_id}
%ul.list
  = render :partial => 'houses/current_person', collection: @people
- if @house.name == 'House of Commons'
  /%p= link_to(t('members_hol'), house_members_current_a_z_letter_path('cdf477be-7bb3-4f19-bf63-b837795e37eb', 'a'))
  %p= link_to(t('members_hol'), house_path('cdf477be-7bb3-4f19-bf63-b837795e37eb'))
- if @house.name == 'House of Lords'
  %p= link_to(t('members_commons'), house_members_current_a_z_letter_path('c2d41b82-d4df-4f50-b0f9-f52b84a6a788', 'a'))

%p= link_to(t('past_and_present_members'), house_members_a_z_letter_path(@house.graph_id, 'a'))
