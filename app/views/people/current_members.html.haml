.section--primary
  .container
    %h1= title(t('.title', current: t('current').capitalize, mps_and_lords: t('mps_and_lords')))

    %h3= t('postcodes.find_mp_constituency')
    = render partial: 'postcodes/postcode_lookup', locals: { path: postcodes_lookup_path }

    = render partial: 'pugin/components/letter-navigation', locals: { route_symbol: :people_members_current_a_z_letter_path }
    = render partial: 'shared/dissolution_message'

%section#content
  .container
    = render partial: 'pugin/cards/person-list', locals: { people: @people, letter: params[:letter] }
