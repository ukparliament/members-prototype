- if HousesHelper.commons?(@house)
  - page_title = title("#{@house.name} - #{t('.title', current_and_former: t('current_and_former').capitalize, member_type: t('mp_plural'))}")
- else
  - page_title = title("#{@house.name} - #{t('.title', current_and_former: t('current_and_former').capitalize, member_type: t('lord_plural'))}")

%h1= page_title

= render partial: 'pugin/components/letter-navigation', locals: { route_symbol: :house_members_a_z_letter_path, primary_id: @house.graph_id }
/= render partial: 'pugin/cards/person-list', locals: { people: @people, letter: params[:letter] }
= render partial: 'pugin/elements/list', locals: { item_type: "people", data: @people}

.block
  - if HousesHelper.commons?(@house)
    %p= link_to("#{t('view_all').capitalize} #{t('member_plural')} #{t('of_the')} #{t('house_of_lords')}", house_members_a_z_letter_path(HousesHelper.lords_id, 'a'))

  - if HousesHelper.lords?(@house)
    %p= link_to("#{t('view_all').capitalize} #{t('member_plural')} #{t('of_the')} #{t('house_of_commons')}", house_members_a_z_letter_path(HousesHelper.lords_id, 'a'))
