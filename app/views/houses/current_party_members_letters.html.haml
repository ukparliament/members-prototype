.section--primary
  .container

    %h1= title("#{@party.name} - #{t('.title', current: t('current').capitalize, member_type: @current_person_type)}")

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :house_parties_party_members_current_a_z_letter_path, primary_id: @house.graph_id, secondary_id: @party.graph_id}

    - if HousesHelper.commons?(@house)
      = render partial: 'shared/dissolution_message'

- unless @letters.empty?

  %section#content
    .container

      = render partial: 'pugin/cards/person-list', locals: { people: @people }
