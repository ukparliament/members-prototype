- title("#{@house.name} - #{t('.title', current_and_former: t('current_and_former').capitalize, member_type: @current_person_type)}")

.section--primary
  .container
    %h1= "#{t('current_and_former').capitalize} #{@current_person_type}"

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :house_members_a_z_letter_path, primary_id: @house.graph_id }

%section#content
  .container
    = render partial: 'pugin/cards/person-list', locals: { people: @people, letter: params[:letter] }
    %p= link_to("#{t('current_and_former').capitalize} #{@other_person_type}", house_members_a_z_letter_path(@other_house_id, 'a'))
